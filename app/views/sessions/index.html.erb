<p id="notice"><%= notice %></p>

<h1>sessions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |season| %>
      <tr>
        <td><%= season.name %></td>
        <td><%= season.description %></td>
        <td><%= link_to 'Show', season %></td>
        <td><%= link_to 'Edit', edit_session_path(season) %></td>
        <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

