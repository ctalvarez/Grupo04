<%= form_for(session, url: series_sessions_path(serie) + "/#{session.id}") do |f| %>
  <% if session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%if !count_s.nil? %>
    <div class="field">
      <%= f.label :session_number%>
      <%= f.text_field :session_number, :value => count_s+1%>
    </div>
  <%else%>
  <div class="field">
    <%= f.label :session_number%>
    <%= f.text_field :session_number %>
  </div>
  <%end%>

  
  <div class="field">
    <%= f.label :status %>
		<%= f.select :status, Session.statuses.collect { |key, value| [key, key] } %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
