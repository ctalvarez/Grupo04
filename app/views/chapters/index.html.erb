<p id="notice"><%= notice %></p>

<h1>Chapters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.name %></td>
        <td><%= chapter.description %></td>
        <td><%= link_to 'Show', series_session_chapter_path(@season.serie.id, @season.id, chapter) %></td>
        <td><%= link_to 'Edit', edit_series_session_chapter_path(@season.serie.id, @season.id, chapter) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
