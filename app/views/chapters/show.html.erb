<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @chapter.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @chapter.description %>
</p>

<div class= "container">
  <div class="row">
    <div class="col-sm-6">
      <h3>Users Comments</h3>
    </div>
  </div>
  <div class="row">
    <%if @chapter.scores.count!=0%>
      <% @chapter.scores.each do | score | %>
    <div class="col-sm-1">
        <%= image_tag(score.user.image, class: "img-rounded", size: "80x90") %>
    </div>
    <div class="col-sm-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%= score.user.name %></strong>
          <span class="text-muted"> Score: <%= score.score %></span>
        </div>
        <div class="panel-body">
          <%= score.comment %>
          <%if score.user.id == current_user.id%>
             <%= button_to 'Edit Comment', edit_score_path(score), method: :get, class: 'btn btn-info'%>
          <%end%>
        </div>
      </div>
    </div>
    <%end%>
    <%end%>
  </div>

</div>


<% if !current_user.nil? %>
  <p>Write new comment :D</p>
  <%= render '/scores/form', score: Score.new, user_id: current_user.id, chapter_id: @chapter.id%>
  <br>
  <%= link_to 'Edit', edit_series_session_chapter_path(@season.serie.id,@season.id,@chapter) %> |
<% end %>

<%= link_to 'Back', series_session_path(@season.serie.id, @season) %>
