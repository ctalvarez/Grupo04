<p id="notice"><%= notice %></p>

<div class="row">
  <p class="h1">Admin Users</p>
</div>
<div class="container container-md-6" >
  <div class="panel panel-default">
    <div class="panel-heading">Admin Users</div>
    <table class="table">
      <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Rol</th>
            <th>Change level</th>
            <th colspan="3"></th>
          </tr>
      </thead>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.rol %></td>
        <td>
        <%if !user.eql? current_user%>
          <%= text = ""
              if user.rol.eql? "user"
                  text = "up level"
                else
                  text = "down level"
                end
                link_to  text, change_level_path({id: user.id}), method: :patch%>
        <%end%>
        </td>
        <td><%= link_to 'Show', user , {:class =>"btn btn-default", :role=>"button"} %></td>
        <td><%= link_to 'Edit', edit_user_path(user) , {:class =>"btn btn-default", :role=>"button"} %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , :class =>"btn btn-default", :role=>"button" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
