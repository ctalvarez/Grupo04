<p id="notice"><%= notice %></p>

<div class="row">
  <p class="h1">All our series</p>
  <%= form_tag  home_path, :method => 'get', :class => "form-inline" do%>
      <legend></legend>
      <div class="form-group">
        <div class="field">
          <%= label_tag 'Name' %>
          <%= text_field_tag :name_search, params[:name_search], :class=>"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= label_tag 'language' %>
          <%= select_tag :language_search, options_for_select(@languages), :include_blank => true, :class=>"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= label_tag 'Genre' %>
          <%= select_tag :genre_search, options_for_select(@genres), :include_blank => true, :class=>"form-control" %>
        </div>
      </div>
      <%= submit_tag "Search", :class=>"btn btn-primary" %>
  <% end %>
</div>


<div class="content-section-series">
  <%n_series = @series.count%>
  <%puts n_series/2%>
  <% (n_series/3+1).times do |n|%>
      <div class="row">
        <%for i in 0..2 do %>
            <% if 3*n + i == @series.length%>
                <% break %>
            <% end %>
          <div class="col-sm-6 col-md-4">
                <%=image_tag(@series[3*n + i].image, class: "img-thumbnail")%>
                <h4><%= link_to @series[3*n + i].name, '/series/' + @series[3*n + i].id.to_s%></h4>
              <div class="caption">
              <p>Description:  <%= @series[3*n + i].description %></p>
              <p>Language: <%= @series[3*n + i].language %></p>
              </div>
          </div>
        <%end%>
      </div>
  <%end%>

</div>
